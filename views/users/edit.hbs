<form
  action='/users/{{user.id}}?_method=PUT'
  method='POST'
  class='mt-5'
  enctype='multipart/form-data'
>
  <div class='form-group'>
    <label for='name'>Name :</label>
    <input
      type='text'
      class='form-control'
      id='name'
      aria-describedby='emailHelp'
      value='{{user.name}}'
      name='name'
    />
  </div>
  <div class='form-group'>
    <label for='email'>Email :</label>
    <input
      type='email'
      class='form-control'
      id='email'
      aria-describedby='emailHelp'
      value='{{user.email}}'
      name='email'
    />
  </div>
  <div class='form-group'>
    <label for='image'>Image :</label>
    <input
      type='file'
      class='form-control-file'
      id='image'
      value='{{user.image}}'
      name='image'
    />
  </div>
  <div class='btn-inline' style='margin-top:30px'>
    <button type='submit' class='btn btn-primary'>送出</button>
    <button type='reset' class='btn btn-danger'>重置</button>
    <a href='/users/{{user.id}}' class='btn btn-info'>個人簡介</a>
    <a href='/restaurants' class='btn btn-secondary'>首頁</a>
  </div>
</form>